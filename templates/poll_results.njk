{% extends '_base.njk' %}

{% set thispage = 'polls' %}
{% set pagetitle = 'Live Poll Result' %}

{% block pagecontent %}
	<div class="poll-container">
		<h1> {{ title }} </h1>
		<div class="result-container">
			{% for record in records %}
				<div class="row">
					<label>{{ record.value }} {% if record.value === votedFor %} (Voted) {% endif %}</label>
					<div class="display">
						<div class="bar"><div class="percent"></div></div>
						<div style="font-weight: 600;">{{ record.votes }} votes</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}

{% block customcss %}
	<style>
		.poll-container {
			display: flex;
			align-items: center;
			flex-direction: column;
		}
		.result-container {
			display: flex;
			flex-direction: column;
			border: solid 1px var(--off-white);
			border-radius: 12px;
			padding: 12px 5px;
			width: 70%;
			background-color: rgba(255,255,255,0.13);
			backdrop-filter: blur(5px);
		}
		.row {
			display: flex;
			flex-direction: column;
			text-align: left;
			margin: 15px 10px;
		}
		.row > label {
			margin: 5px;
			font-size: 20px;
    		font-weight: 600;
		}
		.display {
			display: flex;
			flex-direction: row;
			justify-content: space-between;
		}
		.bar {
			width: 5px;
			height: 30px;
			border-radius: 15px;
			background-color: var(--light-gray);
			transition: width 0.7s ease, background-color 0.2s;
		}
		.percent {
			position: relative;
    		margin: 7px 10px;
    		left: 100%;
			font-weight: 300;
		}
		.winning > .display > .bar {
			background-color: var(--red);
		}
	</style>
{% endblock %}

{% block customjs %}
	<script>
		function update() {
			const totalVotes = [...document.getElementsByClassName('bar')].map(ele => {
				return eval(ele.nextElementSibling.innerHTML.split(" ")[0]);
			}).reduce((a,b) => a+b);
			const maxVotes = Math.max(...[...document.getElementsByClassName('bar')].map(ele => {
				return eval(ele.nextElementSibling.innerHTML.split(" ")[0]);
			}));
			[...document.getElementsByClassName('bar')].map(ele => {
				const votes = eval(ele.nextElementSibling.innerHTML.split(" ")[0]);
				if (votes === maxVotes) document.getElementsByClassName('bar')[0].parentNode.parentNode.classList.add('winning');
				if (votes) ele.style.width = `${votes*100/totalVotes}%`;
				ele.firstElementChild.innerHTML = `${Math.round(votes*100/totalVotes)}%`;
			});
		}
		window.onload = () => {
			update();
		}
	</script>
{% endblock %}