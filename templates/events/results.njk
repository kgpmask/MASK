{% extends '_base.njk' %}

{% set thispage = 'events' %}
{% set pagetitle = 'Results' %}
{% block pagecontent %}
	<br/><br/>
	<a href="/prizes"><button class="button">Prizes!</button></a>
	<br/><br/>
	<h1>Leaderboard</h1>
	<div class = "table">
		<table style="width:70%">
			<tr style="height:30px">
				<!--<th style="width:15%">S.No</th>-->
				<th style="width:15%">Rank</th>
				<th style="width:50%">Name</th>
				<th style="width:20%">Points</th>
			</tr>
			<tr><tr/>
			{% for userinfo in results %}
				<tr>
					<td>{{ userinfo.rank }}</td>
					<td>{{ userinfo.name }}</td>
					<td>{{ userinfo.points }}</td>
				</tr>
			{% endfor %}
		</table>
		<br/><br/><br/>
	</div>
{% endblock %}
{% block customcss %}
	<style>
		table {
			margin-left: 15%;
			margin-bottom: 50px;
		}
		th, td {
			border: 1px solid var(--tinted-gray);
			background-color: black;
			padding: 10px 20px;
		}
	</style>
{% endblock %}
