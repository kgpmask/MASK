{% extends "_base.njk" %}

{% set thispage = 'art' %}
{% set pagetitle = 'Art' %}

{% block pagecontent %}
<div class="text">Check out our content on here or on <a href="https://www.instagram.com/maskiitkgp" class="link"
		target="_blank">Instagram</a>!</div>
<section id="photos">
	{% for img in art %}
	<div class="img-container">
		<img id="img-{{ loop.index }}" src="/assets/art/{{ img.link }}" />
		<div class="overlay">
			<h1>{{ img.name }}</h1>
			<h3>{{ img.attr | join(", ") }}</h3>
			<!-- <h5>{{ img.date }}</h5> -->
		</div>
	</div>
	{% endfor %}
</section>
{% endblock %}

{% block customcss %}
<style>
	.link {
		color: var(--off-white);
	}

	#photos {
		line-height: 0;
		padding: 2em 8em;
		-moz-column-count: 3;
		-webkit-column-count: 3;
		column-count: 3;
		column-gap: 0px;
	}

	#photos .img-container {
		position: relative;
		width: 100%;
		background-color: var(--abyss);
	}

	#photos .img-container .overlay {
		transition: .5s ease;
		position: absolute;
		width: 100%;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		text-align: center;
		opacity: 0;
	}

	#photos .img-container:hover .overlay {
		opacity: 1;
	}

	#photos .img-container img {
		transition: .5s ease;
		display: block;
		width: 100%;
		height: auto;
		opacity: 1;
	}

	#photos .img-container:hover img {
		opacity: 0.3;
	}

	@media (max-width: 768px) {
		#photos {
			-moz-column-count: 2;
			-webkit-column-count: 2;
			column-count: 2;
		}
	}

	@media (max-width: 480px) {
		#photos {
			padding: 2em;
			-moz-column-count: 1;
			-webkit-column-count: 1;
			column-count: 1;
		}
	}
</style>
{% endblock %}